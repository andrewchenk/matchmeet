<!DOCTYPE html>
<html>
<head>
	
</head>
<body>
	<h1>
		User Profile
	</h1>
	<h2>
		<%= @user.user_name %>
	</h2>
	<p>
		<i><%= @user.email %></i>
	</p>
	<h3>
		Groups:
	</h3>
		<% @user.all_following.each do |following| %>
			<% if following %>
				<div><%= link_to following.name, group_path(following.id) %></div>
			<% end %>
		<% end %>
	<h3>
		User Bio:
	</h3>
	<p>
		<%= @user.bio %>
	</p>

	<% if current_user.id == @user.id%>
			<h4>
			<%= form_for :Image_Urls do |f| %>
				     <%= f.text_field :url %>
					 <%= f.submit %>
			<% end %>
			</h4>
		<h3>
			Your Photo URLS:
		</h3>
			
			<% @user.Image_Urls do |url| %>
				<p>
					<%= url %> <br>
				</p>
			<% end %>
			
	<% end %>
</body>
</html>